#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset
# set -o xtrace

# Set magic variables for current file & dir
__dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
__file="${__dir}/$(basename "${BASH_SOURCE[0]}")"
__base="$(basename ${__file} .sh)"

run_tests () {
  local repo=$1
  local target=$2
  local branch=$3

  echo "meta pkgs checkout truffle-core:${target} ${repo}@${branch} --fetch"
  meta pkgs checkout truffle-core:${target} ${repo}@${branch} --fetch

  echo "meta npm install"
  meta npm install

  echo "meta npm symlink"
  meta npm symlink

  echo "meta pkgs test --strict=children truffle-core :: ${repo}"
  meta pkgs test --strict=children truffle-core :: ${repo}
}

run_tests "$@"
